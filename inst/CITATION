citHeader("To cite package 'cocorresp' in publications use:")

citEntry(entry="Manual",
	title ="cocorresp: Co-correspondence analysis ordination methods for community ecology",
	author = personList(as.person("G. L. Simpson")),
	year = 2005,
	note = paste("R package version", packageDescription("cocorresp")$Version),
	textVersion =
	paste("Simpson, G.L. (2005). ", 
	"cocorresp: Co-correspondence analysis ordination methods for community ecology",
	packageDescription("cocorresp")$Version, 
 	".", sep="")
)
 
